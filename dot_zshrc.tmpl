{{ $hostname := output "hostname" "-s" | trim -}}

if [ "$SPIN" ]; then
  export PATH="$PATH:$HOME/bin"
else
  if [[ $CPUTYPE == 'arm64' ]]; then
    export BREW_PREFIX='/opt/homebrew'
  else
    export BREW_PREFIX='/usr/local'
  fi

  BREW_PATH=${BREW_PATH:-'/usr/local'}

  export PATH="/usr/local/bin:$PATH:$BREW_PREFIX/opt/python/libexec/bin:$HOME/.composer/vendor/bin:$HOME/bin"

  if type brew &>/dev/null; then
    export fpath=(${BREW_PREFIX}/share/zsh/site-functions $fpath)
  fi

  export HOMEBREW_NO_ENV_HINTS=true

  [[ -x ${BREW_PREFIX}/bin/brew ]] && eval $(${BREW_PREFIX}/bin/brew shellenv)
fi

export ZSH="$HOME/.oh-my-zsh"

plugins=(git git-prompt gitfast aliases alias-finder zsh-autosuggestions)

ZSH_THEME="custom"

source $ZSH/oh-my-zsh.sh

[[ -f ~/.fzf.zsh ]] && source ~/.fzf.zsh

[[ -x /opt/homebrew/bin/brew ]] && eval $(/opt/homebrew/bin/brew shellenv)

{{ if eq $hostname "Jeremys-Work-MacBook" -}}
[[ -f /opt/dev/sh/chruby/chruby.sh ]] && { type chruby >/dev/null 2>&1 || chruby () { source /opt/dev/sh/chruby/chruby.sh; chruby "$@"; } }

[[ -f /opt/dev/dev.sh ]] && source /opt/dev/dev.sh

[[ -x /usr/local/bin/spin ]] && source <(spin completion --shell=zsh)
{{- end }}

[[ "$(pwd)" =~ areas/clients/admin-web && -x $(which pnpm) && $(pnpm -v) =~ "^8." && ! -f ~/.config/tabtab/zsh/__tabtab.zsh ]] && pnpm install-completion zsh

[[ -f ~/.config/tabtab/zsh/__tabtab.zsh ]] && . ~/.config/tabtab/zsh/__tabtab.zsh || true
